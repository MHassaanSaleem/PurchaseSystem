@model PurchaseSystem.Models.Issuance

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Issuance</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Issuance Date")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.issuance_date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Emp Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.emp_name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Quantity")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.quantity)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="issuance_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Display" class="btn btn-success">Back to List</a>
    </form>
</div>

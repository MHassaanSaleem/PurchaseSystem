@model PurchaseSystem.Models.Issuance

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Issuance</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Issuance Date")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.issuance_date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Emp Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.emp_name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Quantity")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.quantity)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.issuance_id" class="btn btn-primary">Edit</a> |
    <a asp-action="Display" class="btn btn-success">Back to List</a>
</div>

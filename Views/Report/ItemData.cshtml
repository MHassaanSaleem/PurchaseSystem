@model IEnumerable<PurchaseSystem.Models.Item>

@{
    ViewData["Title"] = "ItemData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SearchItem", "Report", FormMethod.Post))
{
    <div class="div">

        <div class="col-md-2">
            @Html.TextBox("Data", null, htmlAttributes: new { @class = "form-control", placeholder = "Enter to search" })
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </div>
}

<br />

<h2>Item Data Report</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Item Name")
            </th>
            <th>
                @Html.DisplayName("Item Status")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.item_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.item_status)
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
@Html.ActionLink("View as PDF", "AllItemsReportPDF", "Report", htmlAttributes: new { @class = "btn btn-success" })


@model PurchaseSystem.Models.Item

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Item Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.item_name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Item Status")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.item_status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.item_id" class="btn btn-primary">Edit</a> |
    <a asp-action="Display" class="btn btn-success">Back to List</a>
</div>

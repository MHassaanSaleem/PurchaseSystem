@model PurchaseSystem.Models.Purchase

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Purchase</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="purchase_id" />
            <div class="form-group">
                @Html.Label("Purchase Item")
                <input asp-for="purchase_item" class="form-control" />
                <span asp-validation-for="purchase_item" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.Label("Purchase Quantity")
                <input asp-for="purchase_quantity" class="form-control" />
                <span asp-validation-for="purchase_quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.Label("Purchase Date")
                <input asp-for="purchase_date" class="form-control" />
                <span asp-validation-for="purchase_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.Label("Price")
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.Label("Vendor")
                <input asp-for="vendor" class="form-control" />
                <span asp-validation-for="vendor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Display" class="btn btn-success">Back to List</a>
</div>


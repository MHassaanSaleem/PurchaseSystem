@model PurchaseSystem.Models.Purchase

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Purchase</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Purchase Item")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.purchase_item)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Purchase Quantity")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.purchase_quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Purchase Date")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.purchase_date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Price")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Vendor")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.vendor)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="purchase_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Display" class="btn btn-success">Back to List</a>
    </form>
</div>

@model PurchaseSystem.Models.Purchase

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Purchase</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Purchase Item")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.purchase_item)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Purchase Quantity")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.purchase_quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Purchase Date")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.purchase_date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Price")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Vendor")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.vendor)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.purchase_id" class="btn btn-primary">Edit</a> |
    <a asp-action="Display" class="btn btn-success">Back to List</a>
</div>
